---
import contributors from '../assets/contributors.json';

interface Contributor {
  name: string;
  description: string;
  github?: string;
  youtube?: string;
  image?: string;
}

const { coreContributors: coreContributorsData, activeContributors: activeContributorsData, valuedContributors: valuedContributorsData } = contributors as {
  coreContributors: Contributor[];
  activeContributors: Contributor[];
  valuedContributors: Contributor[];
};
---

<div class="hall-of-fame w-fit mx-auto">
  <h4 class="mb-8 font-semibold text-[var(--text-secondary)]">Hall of Fame</h4>
  <h1 class="text-4xl font-bold mb-4 w-full md:w-[65%]">Creemos en el poder de la colaboración y el trabajo en equipo
  </h1>
  <h3 class="mb-8 font-semibold text-[var(--text-primary)]">— Y esto es un testamento de ello</h3>
  
  <section class="contributor-section">
    <h2 class="text-2xl font-bold mb-4">Colaboradores principales</h2>
    <div class="contributor-list">
      {coreContributorsData.map(contributor => (
        <div class="contributor-item hover:shadow-sm">
          <div class="contributor-avatar">
            <img 
              src={contributor.image || `https://api.dicebear.com/7.x/avataaars/svg?seed=${contributor.name}`} 
              alt={`${contributor.name}'s avatar`} 
            />
          </div>
          <div class="contributor-info">
            <h3 >{contributor.name}</h3>
            <p class="text-md text-gray-600">{contributor.description}</p>
            <div class="social-links">
              {contributor.github && (
                <a href={contributor.github} target="_blank" rel="noopener noreferrer" class="github-link">
