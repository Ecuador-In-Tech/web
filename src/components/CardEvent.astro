---
import type { Event } from "../interfaces/communities"

const {title, description, links, date, place, modality, hostedBy, image, attendees} = Astro.props as Event
---
<div
class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 cursor-pointer"
>
<div class="h-48 overflow-hidden relative">
    <img
    src={image}
    alt={title}
    class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-300"
    />
    <div class="absolute top-4 right-4">
    <span
        class={`px-3 py-1 rounded-full text-sm font-semibold ${
        modality === "Hybrid"
            ? "bg-purple-100 text-purple-800"
            : modality === "Virtual"
            ? "bg-green-100 text-green-800"
            : "bg-blue-100 text-blue-800"
        }`}
    >
        {modality}
    </span>
    </div>
</div>
<div class="p-6">
    <div class="flex justify-between items-start mb-3">
    <h2 class="text-xl font-bold text-gray-800">{title}</h2>
    </div>
    <p class="text-gray-600 mb-4 line-clamp-2">{description}</p>
    <div class="space-y-2 text-sm text-gray-500">
    <div class="flex items-center gap-2">
        <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
        />
        </svg>
        <span>
        {new Date(date).toLocaleDateString("en-US", {
            weekday: "long",
            year: "numeric",
            month: "long",
            day: "numeric",
        })}
        </span>
    </div>
    <div class="flex items-center gap-2">
        <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
        />
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
        />
        </svg>
        <span>{place}</span>
    </div>
    <div class="flex items-center gap-2">
        <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        >
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
        />
        </svg>
        <span>{attendees} attendees</span>
    </div>
    </div>
</div>
</div>
