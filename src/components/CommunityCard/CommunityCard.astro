---
import SocialLinks from './SocialLinks.astro';
import Tags from './Tags.astro';
import Avatar from './Avatar.astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  githubUrl?: string;
  linkedinUrl?: string;
  instagramUrl?: string;
  logoUrl?: string;
}

const {
  title,
  description,
  tags,
  githubUrl,
  linkedinUrl,
  instagramUrl,
  logoUrl = "/path-to-default-logo.png"
} = Astro.props;
---

<div class="bg-white rounded-2xl p-6 max-w-md border border-gray-300">
  <div class="flex items-start gap-4">
    <Avatar logoUrl={logoUrl} title={title} />
    <div class="flex-1 space-y-3">
      <div>
        <h3 class="text-xl font-semibold text-gray-900 mb-1">{title}</h3>
        <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
      </div>
      
      <Tags tags={tags} />
      
      <div class="pt-2 border-t border-gray-100">
        <SocialLinks
          githubUrl={githubUrl}
          linkedinUrl={linkedinUrl}
          instagramUrl={instagramUrl}
        />
      </div>
    </div>
  </div>
</div>