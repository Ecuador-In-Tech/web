---
import AboutSection from "../components/AboutSection.astro";
import Faq from "../components/Faq.astro";
import Features from "../components/Features.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";

import { aboutUs } from "../assets/home-sections.json";

const pageDescription =
	"Ecuador In Tech: Uniendo y potenciando comunidades tecnológicas en Ecuador. Descubre eventos, comunidades y recursos para desarrolladores ecuatorianos. ¡Únete y crece con nosotros!";
---

<Layout 
  title="Inicio" 
  description={pageDescription}
  type="website"
>
  <!-- Hero Section -->
  <Hero />
  <!-- About Us Section -->
  <AboutSection {...aboutUs} />
  <!-- Features Section -->
  <Features />
  <!-- FAQ Section -->
  <Faq />
</Layout>
